#include "bits/stdc++.h"
using namespace std;
#define ll long long
#define fl i,a,b for(int i=a;i<b;i++)
#define co cout<<
#define ci cin>>
#define rep(i,x,n) for(long long i = x; i < n; i++) 
#define rev(i,n,x) for(int i = n; i >= x; i--)
#define ff            first
#define ss            second
#define vecll vector<long long>
#define pii pair<long long ,long long >
#define pip pair<int,pair<int,int>>
#define ppp pair<pair<int,int>,pair<int,int>>
#define inarr(arr,x,n)  for(ll i=x ;i<n;i++) cin >> arr[i];
#define carr(v,x,n)  for(ll i=x ;i<n;i++) cout << v[i]-v[i-1]<<" ";
#define mpp make_pair
#define pb               push_back
#define ppb               pop_back
#define all(x)          (x).begin(),(x).end()
#define sz(x)           (x).size()
#define henshin           cout<<endl;
#define DEBUG(x) cout << (x) << '\n';
#define int long long 
const ll oo = 1e18;
inline void yn(int x) { if(!x)cout << "NO\n";  else if(x)cout << "YES\n";return; }

const ll N=1e6+5,M=1e9+7,mod=1e9+7;
  const int MAXA = 2e5+7; 
      //vector<int> primes;
   // int mind[MAXA + 1];
// map<int,int> xprime;
 
 
    
    

void solve() {    
 ll n ,p;  ci n>>p;
    vector<int> a(n);priority_queue<pii,vector<pii>,greater<pii>> q;
    rep(i,0,n){ci a[i];if(a[i]<p)q.push({a[i],i});}
vector<int> isConnected(n,p),vis(n,0);




while(sz(q)){auto x=q.top();q.pop(); 
     ll cur=x.ss;vis[cur]=1; 
rep(i,cur+1,n){if(vis[i]==1)break;
    if(gcd(a[i],a[cur])==x.ff){isConnected[i]=x.ff;vis[i]=1; }else break;
}
rev(i,cur-1,0){if(vis[i]==1)break;
    if(gcd(a[i],a[cur])==x.ff){isConnected[i]=x.ff;vis[i]=1; }else break;
}

} 


ll ans=0;
rep(i,1,n){
ans=(ans%mod+ isConnected[i]%mod)%mod;
}

DEBUG(ans)


 }
 





 
signed main() {
 
    ios_base::sync_with_stdio(false);
    cin.tie(0), cout.tie(0);
    cout << fixed << setprecision(15);

    

    int tc=1;     ci tc;
 /* 
  for (int i = 2; i <= MAXA; ++i) {
        if (mind[i] == 0) {
            primes.emplace_back(i);
            mind[i] = i;
        }
        for (auto &x : primes) {
            if (x > mind[i] || x * i > MAXA) break;
            mind[x * i] = x;
        }
    }
 */
 
    while(tc--) { 
 solve(); 
 
    }
    return 0;
}
