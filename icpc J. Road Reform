#include "bits/stdc++.h"
using namespace std;
#define ll long long
#define fl i,a,b for(int i=a;i<b;i++)
#define co cout<<
#define ci cin>>
#define rep(i,x,n) for(int i = x; i < n; i++) 
#define rev(i,n,x) for(int i = n; i >= x; i--)
#define ff            first
#define ss            second
#define vecll vector<long long>
#define pii pair<long long ,long long >
#define pip pair<int,pair<int,int>>
#define ppp pair<pair<int,int>,pair<int,int>>
#define inarr(arr,x,n)  for(ll i=x ;i<n;i++) cin >> arr[i];
#define mpp make_pair
#define pb                push_back
#define ppb               pop_back
#define all(x)          (x).begin(),(x).end()
#define sz(x)           (x).size()
#define henshin           cout<<endl;
#define DEBUG(x) cout << (x) << '\n';
const ll INF = int(1e9);
void yn(int x) { if(!x)cout << "NO\n";  else if(x)cout << "YES\n";return; }

const int N=2e5+5,M=1e6+5;
 
 const int MAXN = 2e5+7; 
      //vector<int> primes;
   // int mind[MAXA + 1];
// map<int,int> xprime;
 struct road{
    ll x,y,s,j; 
 };
ll n,m,k,b;
ll g[N+1][2];ll mm=INF;pii mp;
road* newroad(int a,int b,int c)
{
    road* temp = new road;
    temp->x = a;
    temp->y = b;temp->s = c;temp->j=abs(k-c);
    if(mm>temp->j){mm=temp->j;mp={a,b};}
    if(c<=k)temp->j=0;
    return temp;
}

int find(int a,int c ){
    if(g[a][c]==a)return a;
    else g[a][c]=find(g[a][c],c);
        return g[a][c];
}

void unio(int a,int b,int c) {
  int aa=find(a,c);
     int bb=find(b,c);
     if(aa<bb)g[aa][c]=bb;
     else g[bb][c]=aa; 
}


void solve() {
ci n>>m>>k ;  mm=INT_MAX;
vector<road*> r(m);
 rep(i,0,m){ ll x,y,s; ci x>>y>>s;r[i]= newroad(x,y,s);} 
 rep(i,0,n+3)g[i+1][0]=i+1,g[i+1][1]=i+1;
ll res0=0,res1=mm; int f=0;
//krushkal after minimising 
 unio(mp.ff,mp.ss,1);
sort(all(r),[&](road* a,road* b){
return a->s<b->s;
});

int c=0;
rep(i,0,sz(r)){
if(find(r[i]->x,0)!=find(r[i]->y,0)){c++;unio(r[i]->x,r[i]->y,0); res0+=r[i]->j;if(c==n-1 && r[i]->j==0)res0+=abs(r[i]->s-k);}
if(find(r[i]->x,1)!=find(r[i]->y,1)){unio(r[i]->x,r[i]->y,1); res1+=r[i]->j;}
}
DEBUG(min(res0,res1));

}
 

 
int main() {
#ifdef _DEBUG
    freopen("input.txt", "r", stdin);
    int tt = clock();
#endif
    ios_base::sync_with_stdio(false);
    cin.tie(0), cout.tie(0);
    cout << fixed << setprecision(15);
    
    int tc=1;    ci tc;  
/* 
  for (int i = 2; i <= MAXA; ++i) {
        if (mind[i] == 0) {
            primes.emplace_back(i);
            mind[i] = i;
        }
        for (auto &x : primes) {
            if (x > mind[i] || x * i > MAXA) break;
            mind[x * i] = x;
        }
    }
 */

    while(tc--) { 
 solve(); 
      
#ifdef _DEBUG
        cerr << "TIME = " << clock() - tt << endl;
        tt = clock();
#endif
    }
    return 0;
}
